% define headline -------------------------------------------------------------
\newcommand{\headline}{{}
    \ifdefined\getemail{}
        % if phone is not defined, display email after name
        \ifdefined\getphone{\hfill{\large\getemail}}\fi
    \fi

    \ifdefined\getname{}
        {\sc\LARGE\getname}
    \else
        {\sc\LARGE NAME OF THE PERSON}
    \fi
    \ifdefined\getphone{}
        \hfill\getphone{}
    \else
        % display email as promised
        \ifdefined\getemail{\hfill{\large\getemail}}\fi
    \fi

    \hrulefill{}

    \ifdefined\gettagline{\gettagline}\fi
    \newline
}


% arrange in the layout -------------------------------------------------------
\newcommand{\render}{{}
\noindent
    \headline{}

    \ifdefined\getaboutme{}
        \section{\large\bf About Me}
        \getaboutme{}
    \fi

    \ifdefined\geteducation{}
