        \geteducation{}
    \fi

    \ifdefined\getexperience{}
        \section{\large\bf Experience}
        \getexperience{}
    \fi

    \ifdefined\getprojects{}
        \section{\large\bf Projects}
        \getprojects{}
    \fi

    \ifdefined\getskills{}
        \section{\large\bf Skills}
        \getskills{}
    \fi

    \section{\large\bf Contact}
    \ifdefined\getaddress{\bf Address:} \getaddress\\\fi
    \ifdefined\gethomepage{\bf Website:} \gethomepage\\\fi
    \ifdefined\getemail{\bf Email:} \getemail\\\fi
    \ifdefined\getphone{\bf Phone:} \getphone\\\fi
}

