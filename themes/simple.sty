\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{themes/simple} 

\usepackage[utf8]{inputenc}
\usepackage[a4paper, left=2cm, right=2cm, top=2cm, bottom=2cm]{geometry}
\setlength\parindent{0pt}
\pagenumbering{gobble}


% define styling --------------------------------------------------------------
\newcommand{\setstyle} {}


% define 'variables' ----------------------------------------------------------
\newcommand{\name}[2]{\newcommand{\getname}{#1 #2}}
\newcommand{\address}[1]{\newcommand{\getaddress}{#1}}
\newcommand{\email}[1]{\newcommand{\getemail}{#1}}
\newcommand{\phone}[1]{\newcommand{\getphone}{#1}}

\newcommand{\homepage}[1]{\newcommand{\gethomepage}{https://#1}}
\newcommand{\github}[1]{\newcommand{\getgithub}{https://github.com/#1}}
\newcommand{\linkedin}[1]{\newcommand{\getlinkin}{https://linkedin.com/in/#1}}
\newcommand{\twitter}[1]{\newcommand{\gettwitter}{https://twitter.com/#1}}

\newcommand{\tagline}[1]{\newcommand{\gettagline}{#1}}

\newcommand{\aboutme}[1]{\newcommand{\getaboutme}{#1}}
\newcommand{\education}[1]{\newcommand{\geteducation}{#1}}
\newcommand{\experience}[1]{\newcommand{\getexperience}{#1}}
\newcommand{\projects}[1]{\newcommand{\getprojects}{#1}}
\newcommand{\skills}[1]{\newcommand{\getskills}{#1}}


% define headline -------------------------------------------------------------
\newcommand{\headline}{{}
    \ifdefined\getemail{}
        % if phone is not defined, display email after name
        \ifdefined\getphone{\hfill{\large\getemail}}\fi
    \fi

    \ifdefined\getname{}
        {\sc\LARGE\getname}
    \else
        {\sc\LARGE NAME OF THE PERSON}
    \fi
    \ifdefined\getphone{}
        \hfill\getphone{}
    \else
        % display email as promised
        \ifdefined\getemail{\hfill{\large\getemail}}\fi
    \fi

    \hrulefill{}

    \ifdefined\gettagline{\gettagline}\fi
    \newline
}


% arrange in the layout -------------------------------------------------------
\newcommand{\render}{{}
\noindent
    \headline{}

    \ifdefined\getaboutme{}
        \section{\large\bf About Me}
        \getaboutme{}
    \fi

    \ifdefined\geteducation{}
        \section{\large\bf Education}
        \geteducation{}
    \fi

    \ifdefined\getexperience{}
        \section{\large\bf Experience}
        \getexperience{}
    \fi

    \ifdefined\getprojects{}
        \section{\large\bf Projects}
        \getprojects{}
    \fi

    \ifdefined\getskills{}
        \section{\large\bf Skills}
        \getskills{}
    \fi

    \section{\large\bf Contact}
    \ifdefined\getaddress{\bf Address:} \getaddress\\\fi
    \ifdefined\gethomepage{\bf Website:} \gethomepage\\\fi
    \ifdefined\getemail{\bf Email:} \getemail\\\fi
    \ifdefined\getphone{\bf Phone:} \getphone\\\fi
}

\endinput
