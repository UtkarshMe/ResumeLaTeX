\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{themes/fancy} 

\usepackage[utf8]{inputenc}
\usepackage[T1]{fontenc}
\usepackage[a4paper, left=2cm, right=2cm, top=2cm, bottom=2cm]{geometry}

% import the util commands
\usepackage{util}

% define colors
\usepackage{xcolor}
\definecolor{basecolor}{RGB}{0,0,0}
\definecolor{base2color}{RGB}{100,100,100}
\definecolor{accentcolor}{RGB}{192,244,77}
\definecolor{backgroundcolor}{RGB}{240,240,240}

% disable indents
\setlength\parindent{0pt}
% disable page numbers
\pagenumbering{gobble}

% define separator
\newcommand{\separator}{\space\textbullet\space}


% define headline -------------------------------------------------------------
\newcommand{\headline}{%
    \begin{center}
        % the name
        {\color{base2color}\sc\Huge
            \ifdefined\getfirstname{\getfirstname}\else{john}\fi}
        {\color{basecolor}\sc\Huge
            \ifdefined\getlastname{\getlastname}\else{doe}\fi}
        % the horizontal rule
        {\color{accentcolor}\rule[1mm]{\linewidth}{0.2mm}\newline}
        % the address, email, phone
        {\color{basecolor}
            \ifdefined\getaddress\getaddress\separator\fi
            \ifdefined\getemail\getemail\separator\fi
            \ifdefined\getphone\getphone\fi
            \ifdefined\gethomepage\separator\gethomepage\fi
            \ifdefined\getgithub\separator\getgithub\fi
            \ifdefined\getlinkedin\separator\getlinkedin\fi
        }
    \end{center}
}



% define mysection ------------------------------------------------------------
\newcommand{\mysection}[1]{%
    \hfill\break\hfill\break%
    {\sc\large{#1}}\newline
    {\color{accentcolor}\rule[2.5mm]{\linewidth}{0.2mm}}
}


% arrange in the layout -------------------------------------------------------
\newcommand{\render}{%
    % set the page color
    \pagecolor{backgroundcolor}
    % the top wide line
    {\color{accentcolor}\rule{\linewidth}{7mm}}
    % the headline
    \headline%
    % about me section
    \ifdefined\getaboutme\mysection{About Me}\noindent\getaboutme\fi%
    % education section
    \ifdefined\geteducation\mysection{Education}\noindent\geteducation\fi%
    % experience section
    \ifdefined\getexperience\mysection{Experience}\noindent\getexperience\fi%
    % projects section
    \ifdefined\getprojects\mysection{Projects}\noindent\getprojects\fi%
    % skills section
    \ifdefined\getskills\mysection{Skills}\getskills\fi%
}


